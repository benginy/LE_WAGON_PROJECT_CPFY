<!DOCTYPE html>
<html>
  <head>
    <title>LeWagonProjectCpfy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400&display=swap" rel="stylesheet">

  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

<!-- Navigation Bar -->
<div class="main-navbar">
  <nav class="navbar navbar-expand-lg navbar-light p-2 ps-4 pe-4">
    <div class="container">
      <!-- Brand Logo and Tagline -->
      <div class="d-flex flex-column align-items-center">
        <a class="navbar-brand" href="<%= life_moments_path %>">
          <%= image_tag 'logo.png', alt: "Silly Life Adventures CORP", style: "height: 70px;" %>
        </a>
        <span class="navbar-tagline">
          You're not that guy pal. But <span class="underline-text">you can be</span>.
        </span>
      </div>

      <!-- Links and User Space -->
      <div class="d-flex justify-content-end align-items-center w-100">
        <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
          <% if user_signed_in? %>
            <!-- Dashboard Link -->
            <li class="nav-item">
              <strong><%= link_to dashboard_path, class: 'nav-link d-flex align-items-center' do %>
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
              <% end %></strong>
            </li>
            <!-- Publish Moment Link -->
            <li class="nav-item">
              <strong><%= link_to new_life_moment_path, class: 'nav-link d-flex align-items-center' do %>
                <i class="fas fa-plus-circle me-2"></i> Publish Moment
              <% end %></strong>
            </li>
            <!-- Profile Link -->
            <li class="nav-item">
              <strong><%= link_to edit_user_registration_path, class: 'nav-link d-flex align-items-center' do %>
                <i class="fas fa-user me-2"></i> Profile
              <% end %></strong>
            </li>
            <!-- Log Out Link -->
            <li class="nav-item">
              <strong><%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link d-flex align-items-center btn btn-danger' do %>
                <i class="fas fa-sign-out-alt me-2"></i> Log out
              <% end %></strong>
            </li>
          <% else %>
            <!-- Sign In and Sign Up Links -->
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary me-2' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-secondary' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>





    <%= yield %>
  </body>
</html>
