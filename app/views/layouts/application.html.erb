<!DOCTYPE html>
<html>
  <head>
    <title>LeWagonProjectCpfy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

      <!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container bg-light">
    <!-- Navbar Content -->
    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
      <!-- Brand Name -->
      <a class="navbar-brand" href="<%= life_moments_path %>">Silly Life Adventures CORP</a>

      <!-- Links -->
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <!-- Dashboard Link -->
          <li class="nav-item">
            <strong><%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %></strong>
          </li>
        <% end %>
        <li class="nav-item">
          <strong><%= link_to 'Publish New Life Moment', new_life_moment_path, class: 'nav-link' %></strong>
        </li>
      </ul>
    </div>

    <!-- User Space -->
    <div class="user-space m-3">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <!-- Welcome Message -->
          <li class="nav-item">
           <strong><span class="navbar-text">Welcome <%= current_user.username %></span></strong> 
          </li>
        <% else %>
          <!-- Sign In and Sign Up Links -->
          <li class="nav-item">
            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary me-2' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-secondary' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>
</html>
